@Article{Cahais2012,
  Title                    = {Reference-free transcriptome assembly in non-model animals from next-generation sequencing data},
  Author                   = {CAHAIS, V. and GAYRAL, P. and TSAGKOGEORGA, G. and MELO-FERREIRA, J. and BALLENGHIEN, M. and WEINERT, L. and CHIARI, Y. and BELKHIR, K. and RANWEZ, V. and GALTIER, N.},
