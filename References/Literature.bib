@Article{Bellott2010,
  Title                    = {Convergent evolution of chicken Z and human X chromosomes by expansion and gene acquisition},
  Author                   = {Bellott, Daniel W. and Skaletsky, Helen and Pyntikova, Tatyana and Mardis, Elaine R. and Graves, Tina and Kremitzki, Colin and Brown, Laura G. and Rozen, Steve and Warren, Wesley C. and Wilson, Richard K. and Page, David C.},
  Journal                  = {Nature},
