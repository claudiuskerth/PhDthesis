@Article{Adams2004,
  Title                    = {Maximum-likelihood estimation of demographic parameters using the frequency spectrum of unlinked single-nucleotide polymorphisms.},
  Author                   = {Adams, Alison M. and Hudson, Richard R.},
  Journal                  = {Genetics},
  Year                     = {2004},

