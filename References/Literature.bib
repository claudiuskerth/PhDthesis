@Article{Yu2012,
  Title                    = {How do alignment programs perform on sequencing data with varying qualities and from repetitive regions?},
  Author                   = {Xiaoqing Yu and Kishore Guda and Joseph Willis and Martina Veigl and Zhenghe Wang and Sanford Markowitz and Mark D Adams and Shuying Sun},
