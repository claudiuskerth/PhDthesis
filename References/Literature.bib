@Article{Cagliani2009,
  Title                    = {A complex selection signature at the human AVPR1B gene.},
  Author                   = {Rachele Cagliani and Matteo Fumagalli and Uberto Pozzoli and Stefania Riva and Matteo Cereda and Giacomo P Comi and Linda Pattini and Nereo Bresolin and Manuela Sironi},
