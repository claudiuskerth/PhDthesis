  Pmid                     = {23610629},
  Timestamp                = {2015.10.09},
  Url                      = {http://dx.doi.org/10.1002/ece3.512}
}

@Article{Carling2007,
  Title                    = {Gene sampling strategies for multi-locus population estimates of genetic diversity (theta).},
  Author                   = {Carling, Matthew D. and Brumfield, Robb T.},
