  Institution              = {Department of Statistics, North Carolina State University, Raleigh 27695.},
  Keywords                 = {Animals; Biological Evolution; Data Interpretation, Statistical; Drosophila melanogaster, genetics; Genetic Variation, genetics; Mathematics; Phenotype; Selection, Genetic},
