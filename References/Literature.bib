@Article{Mullen2007,
  Title                    = {Rapid evolution of cuticular hydrocarbons in a species radiation of acoustically diverse Hawaiian crickets (Gryllidae: trigonidiinae: Laupala).},
  Author                   = {Sean P Mullen and Tamra C Mendelson and Coby Schal and Kerry L Shaw},
  Journal                  = {Evolution},
