@Article{Labaj2011,
  Title                    = {Characterization and improvement of RNA-Seq precision in quantitative transcript expression profiling.},
  Author                   = {Paweł P Łabaj and Germán G Leparc and Bryan E Linggi and Lye Meng Markillie and H. Steven Wiley and David P Kreil},
