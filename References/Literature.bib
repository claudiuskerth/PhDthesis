  File                     = {Rockman2012.pdf:Rockman2012.pdf:PDF},
  Institution              = {Department of Biology and Center for Genomics and Systems Biology, New York University, 12 Waverly Place, New York, NY 10003, USA. mrockman@nyu.edu},
