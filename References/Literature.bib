  Institution              = {Department of Ecology and Evolutionary Biology, University of California at Irvine, Irvine, California 92697-2525, USA. tdlong@uci.edu},
  Keywords                 = {Computational Biology, methods/statistics /&/ numerical data; Genetic Markers, genetics; Genetic Variation, genetics; Genotype; Humans; Linkage Disequilibrium, genetics; Nucleotides, genetics; Phenotype; Polymorphism, Genetic, genetics; Quantitative Trait, Heritable,},
