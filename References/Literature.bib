@Article{Hiwatashi2009,
  Title                    = {An explicit signature of balancing selection for color vision variation in New World monkeys.},
  Author                   = {Tomohide Hiwatashi and Yugo Okabe and Toko Tsutsui and Chihiro Hiramatsu and Amanda D Melin and Hiroki Oota and Colleen M Schaffner and Filippo Aureli and Linda M Fedigan and Hideki Innan and Shoji Kawamura},
