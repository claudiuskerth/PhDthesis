@Article{Lotterhos2015,
  Title                    = {The relative power of genome scans to detect local adaptation depends on sampling design and statistical method.},
  Author                   = {Lotterhos, Katie E. and Whitlock, Michael C.},
  Journal                  = {Mol Ecol},
  Year                     = {2015},

  Month                    = {Mar},
