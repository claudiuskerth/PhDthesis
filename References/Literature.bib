@Article{Lowry2016,
  Title                    = {Breaking RAD: an evaluation of the utility of restriction site-associated DNA sequencing for genome scans of adaptation},
  Author                   = {Lowry, David B. and Hoban, Sean and Kelley, Joanna L. and Lotterhos, Katie E. and Reed, Laura K. and Antolin, Michael F. and Storfer, Andrew},
