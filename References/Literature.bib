@Article{Colliard2010,
  Title                    = {Strong reproductive barriers in a narrow hybrid zone of West-Mediterranean green toads (Bufo viridis subgroup) with Plio-Pleistocene divergence.},
  Author                   = {Colliard, Caroline and Sicilia, Alessandra and Turrisi, Giuseppe Fabrizio and Arculeo, Marco and Perrin, Nicolas and Stock, Matthias},
