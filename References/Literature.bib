@Article{Kingsolver2001,
  Title                    = {The strength of phenotypic selection in natural populations.},
  Author                   = {J. G. Kingsolver and H. E. Hoekstra and J. M. Hoekstra and D. Berrigan and S. N. Vignieri and C. E. Hill and A. Hoang and P. Gibert and P. Beerli},
