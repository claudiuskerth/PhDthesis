  Institution              = {Department of Biological Sciences, University of Hull, Hull, HU6 7RX, UK. d.h.lunt@hull.ac.uk},
  Keywords                 = {Animals; Evolution, Molecular; Genetic Variation; Helminth Proteins, genetics; Hybridization, Genetic, genetics; Molecular Sequence Data; Peptide Elongation Factor 1, genetics; Phylogeny; Reproduction, Asexual, genetics; Tylenchoidea, genetics},
