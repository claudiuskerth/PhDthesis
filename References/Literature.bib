}

@Article{Hochkirch2007,
  Title                    = {Sympatry with the devil: reproductive interference could hamper species coexistence.},
  Author                   = {Axel Hochkirch and Julia Gröning and Amelie Bücker},
  Journal                  = {J Anim Ecol},
