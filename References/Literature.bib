@Article{Tregenza2000b,
  Title                    = {Patterns of trait divergence between populations of the meadow grasshopper, Chorthippus parallelus.},
  Author                   = {T. Tregenza and V. L. Pritchard and R. K. Butlin},
  Journal                  = {Evolution},
  Year                     = {2000},

