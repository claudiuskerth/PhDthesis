@Article{Walton2001,
  Title                    = {Genetic population structure and introgression in Anopheles dirus mosquitoes in South-east Asia.},
  Author                   = {C. Walton and J. M. Handley and F. H. Collins and V. Baimai and R. E. Harbach and V. Deesin and R. K. Butlin},
