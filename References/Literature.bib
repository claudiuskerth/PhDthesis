  File                     = {Bao2011.pdf:Bao2011.pdf:PDF},
  Keywords                 = {sequence clustering, de novo assembly},
  Owner                    = {Claudius},
  Timestamp                = {2014.02.10},
  Url                      = {https://github.com/baoe/SEED}
}

