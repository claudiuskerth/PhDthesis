@Article{Hochkirch2008a,
  Title                    = {Phenotypic plasticity in insects: the effects of substrate color on the coloration of two ground-hopper species.},
  Author                   = {Axel Hochkirch and Jana Deppermann and Julia Gröning},
  Journal                  = {Evol Dev},
