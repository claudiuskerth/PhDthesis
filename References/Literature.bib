@Article{Kopp2009,
  Title                    = {The genetic basis of phenotypic adaptation II: the distribution of adaptive substitutions in the moving optimum model.},
  Author                   = {Michael Kopp and Joachim Hermisson},
  Journal                  = {Genetics},
