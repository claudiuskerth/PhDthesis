@Article{Klappert2007,
  Title                    = {The attractiveness fragment--{AFLP} analysis of local adaptation and sexual selection in a caeliferan grasshopper, \emph{Chorthippus biguttulus}.},
  Author                   = {Kirsten Klappert and Roger K Butlin and Klaus Reinhold},
