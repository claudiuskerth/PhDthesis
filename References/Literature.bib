@Article{Scaglione2012,
  Title                    = {RAD tag sequencing as a source of SNP markers in Cynara cardunculus L.},
  Author                   = {Scaglione, Davide and Acquadro, Alberto and Portis, Ezio and Tirone, Matteo and Knapp, Steven and Lanteri, Sergio},
