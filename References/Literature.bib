@Article{You2010,
  Title                    = {RJPrimers: unique transposable element insertion junction discovery and PCR primer design for marker development.},
  Author                   = {You, Frank M. and Wanjugi, Humphrey and Huo, Naxin and Lazo, Gerard R. and Luo, Ming-Cheng and Anderson, Olin D. and Dvorak, Jan and Gu, Yong Q.},
