@Article{Zilversmit2010,
  Title                    = {Low-complexity regions in Plasmodium falciparum: missing links in the evolution of an extreme genome.},
  Author                   = {Martine M Zilversmit and Sarah K Volkman and Mark A DePristo and Dyann F Wirth and Philip Awadalla and Daniel L Hartl},
